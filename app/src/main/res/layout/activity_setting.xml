<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCalc">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/changeDarkTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Темная тема"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/changeLightTheme"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:text="Светлая тема"
            tools:ignore="MissingConstraints"></RadioButton>

        <Button
            android:id="@+id/launch_Calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запуск калькулятора" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>